{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "api",
      "program": "${workspaceFolder}/src/app.ts",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect-brk",
        "--allow-net",
        "--allow-env",
        "--allow-read"
      ],
      "attachSimplePort": 9229,
      "cwd": "${workspaceFolder}",
      "outputCapture": "std",
      "problemMatcher": ["$deno"],
      "console": "integratedTerminal"
    }
  ]
}
